<section class="admin-products-new">

  <header class="page-header">
    <h1>User &raquo; Registration</h1>
  </header>

  <div class="well">
    <h3>Welcome! </h3>
    <p>Already registered? Go to <%= link_to 'Login', [:new, :session] %>.</p>
  </div>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">

      <%= form_for [@user] do |form| %>

      <div class="form-group">
        <%= form.label :first_name %>
        <%= form.text_field :last_name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :first_name %>
        <%= form.text_field :last_name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :email %>
        <%= form.text_area :email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :password %>
        <%= form.text_field :password, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :password_confirmation %>
        <%= form.text_area :password_confirmation, class: 'form-control' %>
      </div>
  
      <%= form.submit 'Submit', class: 'btn btn-primary' %>

<% end %>
<br>
