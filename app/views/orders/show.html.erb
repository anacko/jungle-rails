<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
  </div>

  <% puts @order.inspect %>
  <% puts @order_details.inspect %>
  <% puts @order_details %>

  <div class="panel panel-default items">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th colspan="2">Product</th>
            <th>Quantity</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |item| %>
            <%= render 'item', product: item["product_details"], quantity: item[:quantity].to_i, total_item: item[:total_item].to_i %>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <th colspan="4">
              TOTAL:
            </th>
            <th>
              <%= cart_subtotal_cents / 100.0 %>
            </th>
          </tr>
        </tfoot>
      </table>
    </div>

    <p> Order email: <%= @order.email %> </p>
    <p> Order total (cents): <%= @order.total_cents %> </p>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
